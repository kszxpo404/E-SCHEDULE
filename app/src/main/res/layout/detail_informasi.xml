<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="com.e_schedule.e_schedule.fragments.fragment_detail_informasi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">
            <TextView
                android:text="NAMA INFORMASI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/informasi_id"
                android:background="@android:color/background_light" />

            <TextView
                android:text="INFORMASI PARENT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eee"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/informasi_parent_id"
                android:textSize="16sp"
                android:background="@android:color/background_light"/>

            <TextView
                android:text="INFORMASI DARI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dari"
                android:textSize="16sp"
                android:background="@android:color/background_light"/>

            <TextView
                android:text="RALAT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/st_ralat"
                android:textSize="16sp"
                android:background="@android:color/background_light"/>

            <TextView
                android:text="PENTING"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/st_penting"
                android:textSize="16sp"
                android:background="@android:color/background_light"/>

            <TextView
                android:text="INFORMASI UNTUK :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kepada"
                android:textSize="16sp"
                android:background="@android:color/background_light"/>

            <TextView
                android:text="MATERI INFORMASI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/materi"
                android:textSize="16sp"
                android:background="@android:color/background_light"/>

            <TextView
                android:text="TANGGAL TERBIT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdafa"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fl_tgl_mulai"
                android:textSize="16sp"
                android:background="@android:color/background_light"/>

            <TextView
                android:text="TANGGAL BERAKHIR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fl_tgl_selesai"
                android:textSize="16sp"
                android:background="@android:color/background_light"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
